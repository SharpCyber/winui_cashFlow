<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="CashFlow.Views.TransacaoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CashFlow.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Cinza13}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Grid x:Name="gStatusGeral" Grid.Row="0"  Background="{StaticResource Cinza11}" Padding="12" ColumnSpacing="12" SizeChanged="gStatusGeral_SizeChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45*"/>
                <ColumnDefinition Width="55*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" HorizontalAlignment="Stretch" ColumnSpacing="32" MaxWidth="600" Background="{StaticResource Nenhuma}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0"
                            MinWidth="120"
                            Padding="0" 
                            Spacing="6" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Stretch" 
                            Background="{StaticResource Nenhuma}" 
                            CornerRadius="8">

                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Despesas"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="0"
                                    VerticalAlignment="Bottom">

                            <FontIcon FontFamily="Segoe Fluent Icons" 
                                      Glyph="&#xEB0F;" 
                                      Foreground="{StaticResource Vermelho1}"
                                      FontSize="14"/>

                            <TextBlock Text="80%" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <ProgressBar Value="45"
                                 Maximum="100"
                                 Minimum="0"
                                 MinHeight="6"
                                 Foreground="{StaticResource Vermelho1}"
                                 Background="{StaticResource Cinza4}"
                                 CornerRadius="2"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="R$ 9M"
                                       Foreground="{StaticResource Branco}"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>

                        <TextBlock Text=" / R$ 9M"
                                       FontSize="12"
                                       Foreground="{StaticResource Vermelho1}"
                                       FontWeight="Bold"/>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Column="2"
                            MinWidth="120"
                            Padding="0" 
                            Spacing="6" 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Stretch" 
                            Background="{StaticResource Nenhuma}" 
                            CornerRadius="8">

                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Receitas"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="0"
                                    VerticalAlignment="Center">

                            <FontIcon FontFamily="Segoe Fluent Icons" 
                                      Glyph="&#xEB11;" 
                                      Foreground="{StaticResource Verde1}"
                                      FontSize="14"/>

                            <TextBlock Text="80%" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Grid>

                    <ProgressBar Value="50"
                                 Maximum="100"
                                 Minimum="0"
                                 MinHeight="6"
                                 BackgroundSizing="OuterBorderEdge"
                                 Foreground="{StaticResource Verde1}"
                                 Background="{StaticResource Cinza4}"
                                 CornerRadius="2"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="R$ 9M"
                                       Foreground="{StaticResource Branco}"
                                       FontSize="12"
                                       FontWeight="SemiBold"/>

                        <TextBlock Text=" / R$ 9M"
                                       FontSize="12"
                                       Foreground="{StaticResource Verde1}"
                                       FontWeight="Bold"/>
                    </StackPanel>

                </StackPanel>
            </Grid>

            <StackPanel Grid.Column="1" Padding="12" Spacing="6" VerticalAlignment="Center" MaxWidth="600" Background="{StaticResource Nenhuma}" CornerRadius="8">
                <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="12"
                            HorizontalAlignment="Right"
                                VerticalAlignment="Center">

                    <TextBlock Grid.Column="0"
                               Text="Saldo"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
                        <FontIcon FontFamily="Segoe Fluent Icons" 
                                      Glyph="&#xEB11;" 
                                      Foreground="{StaticResource Verde1}"
                                      FontSize="14"/>
                        <TextBlock Text="80%" FontWeight="SemiBold" Foreground="{StaticResource Branco}"/>
                    </StackPanel>
                </StackPanel>
                <TextBlock Text="R$ 999.999.999,99"
                           Foreground="{StaticResource Verde1}"
                           FontSize="20"
                           HorizontalAlignment="Right"
                           FontWeight="Bold"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
