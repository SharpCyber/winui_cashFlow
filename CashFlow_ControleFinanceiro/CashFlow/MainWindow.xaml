<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CashFlow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CashFlow"
    mc:Ignorable="d"
    Closed="MainWindow_Closed"
    Title="Cash Flow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <NavigationView
            Grid.Column="0"
            Padding="0"
            x:Name="NavView"
            PaneDisplayMode="Left"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            IsBackButtonVisible="Collapsed"
            Loaded="NavView_Loaded"
            ItemInvoked="NavView_ItemInvoked">

            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="nviDashBoard" Tag="Dashboard"/>
                <NavigationViewItem x:Name="nviTransacaoPage" Tag="Transacao"/>
                <NavigationViewItem x:Name="nviInvestimentoPage" Tag="Investimento"/>
                <NavigationViewItem x:Name="nviEntidadeFinanceira" Tag="EntidadeFinanceira"/>
                <NavigationViewItem x:Name="nviCategoria" Tag="Categoria"/>
                <NavigationViewItem x:Name="nviAtivoFinanceiro" Tag="AtivoFinanceiro"/>
                <NavigationViewItem x:Name="nviTeste" Tag="Teste"/>
            </NavigationView.MenuItems>
        </NavigationView>

        <Frame 
            Grid.Column="1"
            Background="Red"
            x:Name="ContentFrame" />
    </Grid>
</Window>