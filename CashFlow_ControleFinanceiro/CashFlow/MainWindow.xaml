<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CashFlow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CashFlow"
    mc:Ignorable="d"
    Closed="MainWindow_Closed"
    Title="Cash Flow">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Padding="0" Margin="0" x:Name="MainContent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="82"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <NavigationView x:Name="NavView"
                        Grid.Column="0"
                        Background="{StaticResource Cinza13}"
                        PaneDisplayMode="Left"
                        IsPaneToggleButtonVisible="False"
                        IsSettingsVisible="False"
                        IsBackButtonVisible="Collapsed"
                        Margin="0"
                        Padding="0"
                        Loaded="NavView_Loaded"
                        ItemInvoked="NavView_ItemInvoked">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="nviDashboardPage" Tag="Dashboard" Margin="0,20,0,0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Dashboard">
                    <Image Source="ms-appx:///Assets/dashboard_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

                <NavigationViewItem x:Name="nviTransacaoPage" Tag="Transacao" Margin="0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Transações">
                    <Image Source="ms-appx:///Assets/transacao_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

                <NavigationViewItem x:Name="nviInvestimentoPage" Tag="Investimento" Margin="0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Investimentos">
                    <Image Source="ms-appx:///Assets/investimento_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

                <NavigationViewItem x:Name="nviTransacaoRegistroPage" Tag="TransacaoRegistro" Margin="0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Transação Registro">
                    <Image Source="ms-appx:///Assets/transacaoregistro_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

                <NavigationViewItem x:Name="nviEntidadeFinanceira" Tag="EntidadeFinanceiraDialog" Margin="0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Entidades Financeiras">
                    <Image Source="ms-appx:///Assets/entidadefinanceira_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

                <NavigationViewItem x:Name="nviCategoria" Tag="CategoriaDialog" Margin="0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Categorias">
                    <Image Source="ms-appx:///Assets/categoria_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

                <NavigationViewItem x:Name="nviAtivoFinanceiro" Tag="AtivoFinanceiroDialog" Margin="0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Ativos Financeiros">
                    <Image Source="ms-appx:///Assets/ativofinanceiro_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

                <NavigationViewItem x:Name="nviTeste" Tag="Teste" Margin="0" Padding="4,0,0,0" HorizontalAlignment="Right" Height="64" ToolTipService.ToolTip="Teste">
                    <Image Source="ms-appx:///Assets/teste_64x64.png" Margin="0" HorizontalAlignment="Stretch" Width="34" Height="34"/>
                </NavigationViewItem>

            </NavigationView.MenuItems>
        </NavigationView>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="38"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        
            <Grid x:Name="gStatusTop" Grid.Row="0" Background="{StaticResource Cinza12}" Padding="12,0" BorderBrush="{StaticResource Cinza13}" BorderThickness="0,0,0,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" FontSize="12" HorizontalAlignment="Left" Text="{Binding NomeTelaAtiva}"/>
                <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" FontSize="12" HorizontalAlignment="Right" Text="Nome do usuário"/>
            </Grid>
            
            <Frame 
                Grid.Row="1"
                Background="{StaticResource Cinza11}"
                x:Name="ContentFrame" />
        </Grid>
        
    </Grid>
</Window>