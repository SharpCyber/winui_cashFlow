<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CashFlow.Styles">

    <!-- PADRÃƒO -->
    <Style x:Key="BaseFontIcon" TargetType="FontIcon">
        <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
    </Style>
    
    <Style x:Key="FontIcon_18" TargetType="FontIcon" BasedOn="{StaticResource BaseFontIcon}">
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style x:Key="FontIcon_16" TargetType="FontIcon" BasedOn="{StaticResource BaseFontIcon}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="FontIcon_14" TargetType="FontIcon" BasedOn="{StaticResource BaseFontIcon}">
        <Setter Property="FontSize" Value="14"/>
    </Style>



</ResourceDictionary>
