<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CashFlow.Styles">

    <!-- PADRÃƒO -->
    <Style x:Key="BaseDefaultButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="BaseAccentButtonStyle" TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <Style x:Key="BaseAlternateCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource AlternateCloseButtonStyle}">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- 28 x 28 -->
    <Style x:Key="DefaultButtonStyleAjuda_28x" TargetType="Button" BasedOn="{StaticResource BaseDefaultButtonStyle}">
        <Setter Property="Width" Value="28"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Content" Value="?"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="Foreground" Value="{StaticResource Branco}"/>
    </Style>
    
    <!-- 34 x 34 -->
    <Style x:Key="DefaultButtonStyle_34x" TargetType="Button" BasedOn="{StaticResource BaseDefaultButtonStyle}">
        <Setter Property="Width" Value="34"/>
        <Setter Property="Height" Value="34"/>
    </Style>

    <Style x:Key="AccentButtonStyle_34x" TargetType="Button" BasedOn="{StaticResource BaseAccentButtonStyle}">
        <Setter Property="Width" Value="34"/>
        <Setter Property="Height" Value="34"/>
    </Style>

    <Style x:Key="AlternateCloseButtonStyle_34x" TargetType="Button" BasedOn="{StaticResource BaseAlternateCloseButtonStyle}">
        <Setter Property="Width" Value="34"/>
        <Setter Property="Height" Value="34"/>
    </Style>

</ResourceDictionary>
