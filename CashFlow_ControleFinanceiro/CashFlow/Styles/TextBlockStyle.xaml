<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ITEM TRANSAÇÃO  -->
    <Style x:Key="txtStyle_ItemTransacao_Padrao" TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="WrapWholeWords"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_12" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_Padrao}">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{StaticResource Cinza2}"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_10" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_Padrao}">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Foreground" Value="{StaticResource Cinza2}"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_Top_12_Entrada" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_12}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Foreground" Value="{StaticResource Verde1}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_Top_12_Saida" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_12}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Foreground" Value="{StaticResource Vermelho1}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_Top_12_Total" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_12}">
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Foreground" Value="{StaticResource Branco}"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_Top_12" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_12}">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_Bottom_12" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_12}">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_Bottom_10" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_10}">
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>

    <Style x:Key="txtStyle_ItemTransacao_Top_10" TargetType="TextBlock" BasedOn="{StaticResource txtStyle_ItemTransacao_10}">
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>


</ResourceDictionary>
